          align-items: center;
}
.music-info .back {
    background-image: url("data:image/svg+xml;base64,");
    position: absolute;
    top: 34px;
    left: 40rpx;
    width: 60rpx;
    height: 60rpx;
    background-size: cover;
}
.music-info .title {
    margin-top: 5vh;
    margin-bottom: 3vh;
    color: #FFFFFF;
}
.music-info .author {
    font-size: 22rpx;
    color: #FFFFFF;
    margin-bottom: 5vh;
}
.music-info .song-img {
    width: 75vw;
    height: 57vw;
    border-radius: 20rpx;
    overflow: hidden;
    margin-bottom: 5vh;
}
.music-info .song-img .img-content {
      width: 100%;
      height: 100%;
      -webkit-transition: all .5s;
      -o-transition: all .5s;
      transition: all .5s;
}
.music-info .lyric-scroll {
    width: 100vw;
    height: 20vh;
    position: relative;
    -webkit-mask-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(255, 255, 255, 0)), color-stop(15%, rgba(255, 255, 255, 0.6)), color-stop(25%, white), color-stop(75%, white), color-stop(85%, rgba(255, 255, 255, 0.6)), to(rgba(255, 255, 255, 0)));
    -webkit-mask-image: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0, rgba(255, 255, 255, 0.6) 15%, white 25%, white 75%, rgba(255, 255, 255, 0.6) 85%, rgba(255, 255, 255, 0) 100%);
            mask-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(255, 255, 255, 0)), color-stop(15%, rgba(255, 255, 255, 0.6)), color-stop(25%, white), color-stop(75%, white), color-stop(85%, rgba(255, 255, 255, 0.6)), to(rgba(255, 255, 255, 0)));
            mask-image: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0, rgba(255, 255, 255, 0.6) 15%, white 25%, white 75%, rgba(255, 255, 255, 0.6) 85%, rgba(255, 255, 255, 0) 100%);
}
.music-info .lyric-scroll .lyric-container .lyric {
      font-size: 30rpx;
      color: rgba(225, 225, 225, 0.8);
      line-height: 40px;
      text-align: center;
}
.music-info .lyric-scroll .lyric-container .active {
      color: #4CD964;
      font-size: 40rpx;
      font-weight: 700;
      -webkit-transition: all 0.5s;
      -o-transition: all 0.5s;
      transition: all 0.5s;
}
.music-info .lyric-scroll2 {
    height: 62vh;
    -webkit-transition: height 1s;
    -o-transition: height 1s;
    transition: height 1s;
}
.music-info .music-control {
    position: absolute;
    bottom: 0;
    left: 0;
}
.music-info .bg {
    -webkit-filter: blur(65px);
            filter: blur(65px);
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: -1;
    -webkit-transform: translateZ(0);
            transform: translateZ(0);
    opacity: .6;
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    background-size: 150% 150%;
    -webkit-transition: all .8s;
    -o-transition: all .8s;
    transition: all .8s;
}
.music-info .mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: -1;
    background-color: rgba(0, 0, 0, 0.6);
}

