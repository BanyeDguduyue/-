
page {
  height: 100vh;
  position: relative;
}
.bg {
  -webkit-filter: blur(22rpx);
          filter: blur(22rpx);
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: -3;
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
  background-size: 150% 150%;
  -webkit-transition: all .8s;
  -o-transition: all .8s;
  transition: all .8s;
}
.currimg {
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
}
.active {
  border-bottom: 7rpx solid #FFFFFF;
}
.mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: -1;
  background-color: rgba(0, 0, 0, .4)
}
.content {
